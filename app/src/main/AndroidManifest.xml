<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="net.techbrewery.tvphotoframe"
    tools:ignore="MissingLeanbackLauncher">

    <uses-feature
        android:name="android.software.leanback"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />


    <!-- Required only if your app needs to access images or photos
     that other apps created. -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.ACCESS_MEDIA_LOCATION" />

    <!-- If your app doesn't need to access media files that other apps created,
         set the "maxSdkVersion" attribute to "28" instead. -->
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:banner="@drawable/banner"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.TVPhotoFrame">

        <activity
            android:name=".tv.welcome.TvAuthActivity"
            android:exported="true"
            android:label="@string/title_activity_welcome"
            android:theme="@style/Theme.TVPhotoFrame">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
            <!--            <intent-filter>-->
            <!--                <action android:name="android.intent.action.VIEW" />-->

            <!--                <category android:name="android.intent.category.DEFAULT" />-->
            <!--                <category android:name="android.intent.category.BROWSABLE" />-->
            <!--            </intent-filter>-->
        </activity>

        <activity
            android:name=".mobile.welcome.WelcomeMobileActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.TVPhotoFrame">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="tb-tv-photo-frame.firebaseapp.com/__/auth/handler"
                    android:scheme="https" />
            </intent-filter>
        </activity>

        <activity
            android:name=".tv.albums.AlbumsActivity"
            android:exported="false"
            android:label="@string/title_activity_albums"
            android:theme="@style/Theme.TVPhotoFrame" />

        <activity
            android:name=".mobile.photos.GallerySyncActivity"
            android:exported="false"
            android:theme="@style/Theme.TVPhotoFrame" />

        <activity
            android:name=".mobile.auth.PhotosAuthRedirectActivity"
            android:theme="@style/Theme.TVPhotoFrame"
            android:exported="true">

            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="https"
                    android:host="tb-tv-photo-frame.firebaseapp.com"
                    android:pathPattern="/__/auth/handler" />
            </intent-filter>

        </activity>
    </application>

</manifest>